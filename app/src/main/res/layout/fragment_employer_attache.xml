<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".JobSeekerAttache">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:layout_marginTop="10dp">
    <RelativeLayout
       android:id="@+id/relative_Layout_background"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/work"
      >
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/accenture"
           android:layout_marginTop="10dp"
           android:layout_marginLeft="10dp"
           />
   </RelativeLayout>

       <android.support.v7.widget.CardView
           android:id="@+id/cv_ads"
           android:layout_marginTop="10dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/relative_Layout_background"
           app:cardCornerRadius="10dp"
           android:background="#ead4d4"
           >
           <RelativeLayout
               android:id="@+id/relatvie_layoutads"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp">
           <TextView
               android:id="@+id/adds_title"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="USRN Clinical Analyst"
               android:textSize="30sp"
               android:textColor="#584343"
               android:gravity="center"/>
           <TextView
               android:id="@+id/adds_submessage"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="3 years related work experience"
               android:textSize="20sp"
               android:textColor="#000000"
               android:layout_below="@+id/adds_title"
               android:gravity="center"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="70dp"
               android:layout_marginRight="70dp"
               />
               <TextView
                   android:id="@+id/adds_skills"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Skills Required: CSS3, HTML5"
                   android:textSize="20sp"
                   android:textColor="#796f6f"
                   android:layout_below="@+id/adds_submessage"
                   android:gravity="center"
                   android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                   />
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/adds_skills"
                   android:gravity="center"
                   android:layout_marginBottom="10dp">
            <Button
           android:id="@+id/refer_btn"
           android:text="REFER PHP (3,000.00)"
           android:textColor="#7b7a7a"
           android:textSize="10sp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@drawable/buttonshape_refer"
           android:layout_marginRight="5dp"
           android:layout_marginTop="5dp"
           android:layout_toRightOf="@+id/save_btn"
           />
       <Button
           android:id="@+id/apply_btn"
           android:text="APPLY"
           android:textColor="#7b7a7a"
           android:textSize="10sp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@drawable/buttonshape_apply"
           android:layout_marginTop="5dp"
           android:layout_toRightOf="@id/refer_btn"
           />
       <Button
           android:id="@+id/save_btn"
           android:text="SAVE"
           android:textColor="#7b7a7a"
           android:textSize="10sp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@drawable/buttonshape_save"
           android:layout_marginTop="5dp"
           android:layout_marginRight="5dp"
           />
               </RelativeLayout>
        </RelativeLayout>
       </android.support.v7.widget.CardView>
       </RelativeLayout>

    </ScrollView>


</FrameLayout>
