<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#34495e</item>
        <item name="colorPrimaryDark">#34495e</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme_NoActionBarTab" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#333333</item>
        <item name="colorPrimaryDark">#34495e</item>
        <item name="colorAccent">#71e1af</item>

        <!--Material Drawer-->
        <item name="material_drawer_primary_text">@color/material_drawer_primary_dark</item>

    </style>

    <style name="AppTheme_NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

     <!-- SearchView Style -->
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchHintIcon">@drawable/ic_action_message</item>
        <item name="colorAccent">#34495e</item>
    </style>

    <!-- Text Styles-->


